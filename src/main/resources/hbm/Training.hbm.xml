<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.rakuten.PenguinSoldiers.entity">

    <class name="Training" table="training">
        <id name="id" column="training_id">
            <generator class="increment"/>
        </id>
        
        
        <property name="name"/>
        <property name="overview"/>
        <property name="maxParticipants" column="max_participants"/>
        <property name="openDate" column="open_date"/>
        <property name="closeDate" column="close_date"/>
        <property name="status"/>
        <property name="otherInfo" column="other_info"/>
        <property name="content"/>
        
        <set name="premises" cascade="none" table="hierarchy"  lazy="false" inverse="true" >
          <key column="training_id" />
          <one-to-many class="TrainingPremise"/>
        </set>
        
        <set name="goals" cascade="none" table="hierarchy"  lazy="false" inverse="true" >
          <key column="training_id" />
          <one-to-many class="TrainingGoal"/>
        </set>
        
        <set name="outlines" cascade="none" table="hierarchy"  lazy="false" inverse="true" >
          <key column="training_id" />
          <one-to-many class="TrainingOutline"/>
        </set>
        
        <set name="targets" cascade="none" table="hierarchy"  lazy="false" inverse="true" >
          <key column="training_id" />
          <one-to-many class="TrainingTarget"/>
        </set>
        
        <set name="venues" cascade="none" table="hierarchy"  lazy="false" inverse="true" >
          <key column="training_id" />
          <one-to-many class="TrainingVenue"/>
        </set>
        
    </class>

</hibernate-mapping>