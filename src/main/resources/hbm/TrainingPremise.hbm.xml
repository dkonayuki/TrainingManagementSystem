<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.rakuten.PenguinSoldiers.entity">

    <class name="TrainingPremise" table="training_premise">
        <id name="id" column="training_premise_id">
            <generator class="increment"/>
        </id>
        <many-to-one name="training" class="Training" column="training_id" lazy="false" />
        <property name="content" column="content" type="text"/>
    </class>

</hibernate-mapping>